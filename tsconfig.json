{
  "compilerOptions": {
    // Compilation Configuration
    "target": "es2020",

    // Environment Configuration
    "experimentalDecorators": true,
    "moduleResolution": "node",

    // Enhance Strictness
    "strict": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "newLine": "LF",
    "noEmit": true,
    "allowJs": true,

    "baseUrl": ".",

    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/*": ["tests/dummy/app/*", "app/*"],
      "@ember/legacy-built-in-components": ["addon"],
      "@ember/legacy-built-in-components/*": ["addon/*"],
      "@ember/legacy-built-in-components/test-support": ["addon-test-support"],
      "@ember/legacy-built-in-components/test-support/*": [
        "addon-test-support/*"
      ],
      "*": ["types/*"]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ]
}
